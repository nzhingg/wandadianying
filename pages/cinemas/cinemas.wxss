.page {
    width: 750rpx;
}
.page__hd {
    width: 750rpx;
    height: 84rpx;
    background-color: #EFEFF4;
    display: flex;
    align-items: center;
}
.hd_city {
    font-size: 30rpx;
    padding-left: 20rpx;
}
.page__bd {
    width: 750rpx;
}
.bd_item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 750rpx;
    height: 150rpx;
    border-bottom: 2rpx solid #D3D3D3;
    margin-left: 20rpx;
}
.item__store {
    font-size: 30rpx;
    font-weight: bold;
    padding-bottom: 22rpx;
}
.item__position {
    font-size: 26rpx;
    color: #999999;
}